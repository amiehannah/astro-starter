<style>
	.carousel-button {
	}
	.quote-wrapper {
		padding-top: 2rem;
		padding-bottom: 2rem;
		display: grid;
		grid-template-columns: repeat(5, 6% 1fr);
		grid-template-rows: repeat(3, 6%);
		/* width: 80%; */
		margin: 0 auto;
		max-width: 320px;
		align-items: center;
	}
	.quote-card {
		grid-column: 2/-1;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
		text-align: center;
		border-radius: 0.8rem;
		transition: 0.3s;
	}

	.quote-card:hover {
		box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
	}

	.quote-header {
		background-color: hsl(var(--off-white));
		color: hsl(var(--dark-navy));
		padding: 2rem 1rem;
		border-radius: 0.8rem 0.8rem 0rem 0rem;
	}

	.quote-container {
		padding: 1rem;
		letter-spacing: 0.1ch;
		font-weight: 300;
		color: hsl(var(--dark-navy));
		text-transform: uppercase;
	}
	.quote {
		font-size: 1.25rem;
		font-weight: 400;
		letter-spacing: normal;
		font-size: 1.2rem;
		font-style: italic;
		padding: 1rem;
	}
	.quote-circle {
		height: 4.6rem;
		width: 4.6rem;
		background-color: hsl(var(--teal));
		border-radius: 50%;
		grid-column: 1/2;
		z-index: 1;
		position: relative;
		grid-row: 1/3;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
	}
	.quote-card {
		grid-row: 2/3;
		align-self: baseline;
	}

	.quote-circle::before {
		font-family: "Times New Roman", Times, serif;
		content: "\201C";
		color: white;
		font-size: 5rem;
		font-weight: 700;
		position: absolute;
		top: -10px;
		right: 18px;
	}
</style>
